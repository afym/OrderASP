@{
    var id = (int)ViewData["id"];
    ViewBag.Title = "Delete product";
}

<div class="alert alert-block">
    <h2>@ViewBag.Title</h2>
    <p>Do you want to delete this product ?</p>
    @{Html.BeginForm("Delete", "Product", FormMethod.Post);}

    @Html.Hidden("Id", id) 
    <br />
    <button type="submit" class="btn btn-danger">Yes</button>
    <button id="back" type="button" class="btn">No</button>
    @{Html.EndForm();}
</div>

@section Scripts{
    <script type="text/javascript">
        $("#back").click(function () {
            window.location.href = "/Product/Index";
        });
    </script>
}