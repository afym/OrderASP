@{
    ViewBag.Title = "Product List";
}

@model IEnumerable<OrderASP.Models.Product>

<h2>@ViewBag.Title</h2>

@if(TempData["Message"] != null) 
{
    <br />
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

@if (Model.Count() > 0) 
{
     <table class="table table-condensed">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Category name</th>
                <th>Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{int counter = 1;}
            @foreach (var product in Model) {
            <tr>
                <td>@counter</td>
                <td>@Html.DisplayFor(categorymodel => product.Name)</td>
                <td>@Html.DisplayFor(categorymodel => product.Category.Name)</td>
                <td>@Html.DisplayFor(categorymodel => product.Stock)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = product.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = product.Id })
                </td>
            </tr>
                counter++;
            }
        </tbody>
    </table>   
} else {
    <br />
    <div class="alert alert-info">There are not products.</div>
}
