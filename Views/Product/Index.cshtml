@model IEnumerable<OrderASP.Models.Product>

@{
    ViewBag.Title = "Product List";
}

<h2>@ViewBag.Title</h2>

<p>
    <a href="@Url.Action("New", "Product")" class="btn btn-warning"><i class="icon-plus"></i>Add new product</a>
</p>

@if(TempData["New"] != null)
{
    <div class="alert alert-success">
        @TempData["New"]
    </div>
}
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InStock)
        </th>
        <th>
            Actions
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InStock)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id })<span class="divider">/</span>
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })    
        </td>
    </tr>
}

</table>
