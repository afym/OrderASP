<head>
   <meta charset="utf-8" />
   <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame -->
   <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
   <!-- Mobile viewport optimized: h5bp.com/viewport -->
   <meta name="viewport" content="width=device-width">

   <title>@ViewBag.Title</title>

   <meta name="robots" content="noindex, nofollow">
   <meta name="description" content="MetroUI-Web : Simple and complete web UI framework to create web apps with Windows 8 Metro user interface." />
   <meta name="keywords" content="metro, metroui, metro-ui, metro ui, windows 8, metro style, bootstrap, framework, web framework, css, html" />
   <meta name="author" content="Angel Francisco Ybarhuen Manrique OrderASP"/>
   
   <!-- remove or comment this line if you want to use the local fonts -->
   <link href='http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700' rel='stylesheet' type='text/css'>

   <link rel="stylesheet" type="text/css" href="~/Content/content/css/bootstrap.css">
   <link rel="stylesheet" type="text/css" href="~/Content/content/css/bootstrap-responsive.css">
   <link rel="stylesheet" type="text/css" href="~/Content/content/css/bootmetro.css">
   <link rel="stylesheet" type="text/css" href="~/Content/content/css/bootmetro-tiles.css">
   <link rel="stylesheet" type="text/css" href="~/Content/content/css/bootmetro-charms.css">
   <link rel="stylesheet" type="text/css" href="~/Content/content/css/metro-ui-light.css">
   <link rel="stylesheet" type="text/css" href="~/Content/content/css/icomoon.css">
   <link rel="stylesheet" href="~/Content/ui/jquery.ui.all.css">
    <!--  these two css are to use only for documentation -->
   <link rel="stylesheet" type="text/css" href="~/Content/content/css/demo.css">
   <link rel="stylesheet" type="text/css" href="~/Content/scripts/google-code-prettify/prettify.css" >

   <!-- Le fav and touch icons -->
   <link rel="shortcut icon" href="~/Content/content/ico/favicon.ico">
   <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/Content/content/ico/apple-touch-icon-144-precomposed.png">
   <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/Content/content/ico/apple-touch-icon-114-precomposed.png">
   <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/Content/content/ico/apple-touch-icon-72-precomposed.png">
   <link rel="apple-touch-icon-precomposed" href="~/Content/content/ico/apple-touch-icon-57-precomposed.png">
  
   <!-- All JavaScript at the bottom, except for Modernizr and Respond.
      Modernizr enables HTML5 elements & feature detects; Respond is a polyfill for min/max-width CSS3 Media Queries
      For optimal performance, use a custom Modernizr build: www.modernizr.com/download/ -->
   <script src="~/Content/scripts/modernizr-2.6.1.min.js"></script>
</head>

<body data-accent="blue">
   <header id="nav-bar" class="container-fluid">
      <div class="row-fluid">
         <div class="span8">
            <div id="header-container">
                <a id="backbutton" class="win-backbutton" href="@Url.Action("Index", "Home")"></a>
               <h1>OrderASP - BootMetro</h1>
               <div class="dropdown">
                  <a class="header-dropdown dropdown-toggle accent-color" data-toggle="dropdown" href="#" >
                     Simple web application
                     <b class="caret"></b>
                  </a>
            </div>
            </div>
         </div>
         <div id="top-info" class="pull-right">
         <a id="settings" class="pull-left" href="#">
            <b class="icon-settings"></b>
         </a>
      </div>
   </div>
   </header>
   
    <div class="container">
       <!-- Docs nav
       ================================================== -->
       <div class="row">
         <div class="span3 bs-docs-sidebar">
             <h3>Demo</h3>
           <ul class="nav nav-list bs-docs-sidenav affix-top">
                <li>Categories
                      <ul>
                            <li><a href="@Url.Action("Index", "Category")">List of categories</a></li>
                            <li><a href="@Url.Action("New", "Category")">Add new category</a></li>
                      </ul>
                </li>
                <li>Products
                      <ul>
                           <li><a href="@Url.Action("Index", "Product")">List of products</a></li>
                           <li><a href="@Url.Action("New", "Product")">Add new product</a></li>
                      </ul>
               </li>
         </ul>
         </div>
         <div class="span9">
            @RenderBody()
         </div>
       </div>
   
     </div>

    @Html.Partial("_Footer")

   <!-- Grab Google CDN's jQuery. fall back to local if necessary -->
   <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
   <script>window.jQuery || document.write("<script src='scripts/jquery-1.8.2.min.js'>\x3C/script>")</script>

   <script type="text/javascript" src="~/Content/scripts/google-code-prettify/prettify.js"></script>
   <script type="text/javascript" src="~/Content/scripts/jquery.mousewheel.js"></script>
   <script type="text/javascript" src="~/Content/scripts/jquery.scrollTo.js"></script>
   <script type="text/javascript" src="~/Content/scripts/bootstrap.min.js"></script>
   <script type="text/javascript" src="~/Content/scripts/bootmetro.js"></script>
   <script type="text/javascript" src="~/Content/scripts/bootmetro-charms.js"></script>
   <script type="text/javascript" src="~/Content/scripts/demo.js"></script>
   <script type="text/javascript" src="~/Content/scripts/holder.js"></script>
   <script src="~/Content/ui/js/jquery.ui.core.js"></script>
   <script src="~/Content/ui/js/jquery.ui.widget.js"></script>
   <script src="~/Content/ui/js/jquery.ui.position.js"></script>
   <script src="~/Content/ui/js/jquery.ui.menu.js"></script>
   <script src="~/Content/ui/js/jquery.ui.autocomplete.js"></script>
   
    <script type="text/javascript">
        $(".metro").metro();

        $("#afym").click(function () {
            window.location.href = "https://github.com/afym";
        });
   </script>
    @RenderSection("Scripts", false)
</body>
</html>
